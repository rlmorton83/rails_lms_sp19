              <%= a.user.full_name %>
              <br>
              <%= link_to 'Remove', course_enrollment_path(@course, a), method: :delete %>
            </li>
          <% end %>
        </ul>
        
        <h2>Student</h2>
        <ul>
          <% @student.each do |s| %>
